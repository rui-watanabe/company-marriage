<div class="left-button">
  <%= link_to "ユーザー一覧に戻る", "/users/index",class:"edit-link" %>
</div>
<h4 style="float:left; margin: 40px 30px 0px 0px; width:100%;">気になる同士</h4>
<% @entries.each do |e| %>
  <div class="user-name" style="display:inline-flex;><strong">
    <%= image_tag e.user.avatar, style:"width:100px; height:100px; margin:10px 10px 0 0;" %>
      <a style="padding-right:10px; vertical-align: middle;" href="/users/<%= e.user.id %>">
        <%= e.user.name %>さん</a>
      </strong>
  </div>
<% end %>
<hr>
<div class="chats">
  <% if @messages.present? %>
    <div class="chat" data-message-id=< %=m .id %>
      <% @messages.each do |m| %>
        <div class="chat-box">
          <div class="chat-face">
            <%= image_tag m.user.avatar, style:"width:100px; height:100px;" %>
          </div>
          <div class="chat-hukidashi"> <strong><%= m.content %></strong> <br>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <h3 class="text-center">メッセージはまだありません</h3>
  <% end %>
    <div class="posts">
      <%= form_for @message do |f| %>
        <%= f.text_field :content, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
          <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.submit "投稿",class: 'form-submit'%>
              <% end %>
    </div>
</div>