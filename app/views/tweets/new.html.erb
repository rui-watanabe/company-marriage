<div class="container">
  <%= form_tag('/tweets', method: :post) do %>
    <h3 class="text-center" style="padding: 30px;">投稿する </h3>
    <div class="form-group">
      <div class="clearfix">
        <div class="col-sm-4" style="padding-left: 0px;">画像投稿 </div>
        <div class="col-sm-8" style="float:right;">
          <div class="clearfix"> </div> <input type="file" name="image" id="image_picture" style="text-align:center;"> </div>
      </div>
      <div class="row" style="padding-top: 30px;">
        <div class="col-sm-2">投稿 </div>
        <div class="col-sm-10" style="padding: 3px;"> <textarea class="form-control  input-sm" rows="5" name="text" id="comment" placeholder="テキストを入力"></textarea> </div>
      </div>
    <div class="text-center" style="padding: 30px;"> <input class="btn btn-red50_rsd" type="submit" value="SENT"> </div>
  <% end %>
</div>