    <div class="form-group">
      <div class="row" style="padding-top: 30px;">
        <div class="col-sm-10" style="margin-left: 100px;"> <textarea class="form-control  input-sm" rows="5" name="text" placeholder=""><%= @tweet.text %></textarea> </div>
      </div>
    <div class="text-center" style="padding: 30px;"> <input class="btn btn-red50_rsd" type="submit" value="SENT"> </div>
  <% end %>
</div>