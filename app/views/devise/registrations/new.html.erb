<div class="devise-contents">
<h1><%= t('新規登録') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>

   <div class="form-group">
    <%= f.label :Name %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control',placeholder:"会社太郎" %>
  </div>

  <div class="form-group">
    <%= f.label :Email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control',placeholder:"test@gmail.com" %>
  </div>

  <div class="sex-field">
    <%= f.label :Sex %><br />
    <%= f.label :"男性" ,class:"sex-man" %>
    <%= f.radio_button :sex, :man %>
    <%= f.label :"女性" ,class:"sex-lady" %>
    <%= f.radio_button :sex, :woman %>
  </div>

    <div class="form-group">
      <label class="image-label">Avatar
        <div class="image-file">
          <%= f.file_field :avatar,class:"file-input"%>
          <pre class="image-description">クリックしてあなたの画像をアップロード</pre>
        </div>
      </label>
    </div>

  <div class="form-group">
    <%= f.label :Profile %>
    <%= f.text_field :profile, autofocus: true, autocomplete: 'profile', class: 'form-control',placeholder:"例：第一営業部" %>
  </div>

  <div class="form-group">
    <%= f.label :Password %>
    <i>(英数字6文字以上)</i>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control',placeholder:"6文字以上のパスワードを入力してください"%>

    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :Password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control',placeholder:"6文字以上のパスワードを入力してください" %>
  </div>

  <div class="form-group">
    <%= f.submit ('新規登録'), class: 'btn btn-red50_rsd devise-new-button'%>
  </div>
<% end %>

<%= render 'devise/shared/links' %>

</div>